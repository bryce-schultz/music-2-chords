{
    "manifest_version": 2,
    "name": "Panda-Chords",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": [
            "https://www.pandora.com/*",
            "http://www.pandora.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    }
}