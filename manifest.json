{
    "manifest_version": 2,
    "name": "Panda-Chords",
    "version": "2.0",

    "content_scripts": [
        {"matches": [
            "https://www.pandora.com/*",
            "http://www.pandora.com/*"
            ],
            "js": [
                "pa_content.js",
                "common.js"
            ]
        }, 
        {"matches": [
            "https://music.apple.com/*",
            "http://music.apple.com/*"
            ], 
            "js": [
                "ap_content.js",
                "common.js"
            ]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    }
}